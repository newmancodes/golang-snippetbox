 {{define "title"}}Create a New Snippet{{end}}
 {{define "main"}}
 <form action="/snippet/create/" method="POST">
    <div>
        <label>Title:</label>
        <input type="text" name="title">
    </div>
    <div>
        <label>Content:</label>
        <textarea name="content"></textarea>
    </div>
    <div>
        <label>Delete in:</label>
        <input id="oneyear" type="radio" name="expires" value="365" checked>&nbsp;<label for="oneyear">One Year</oneyear>
        <input id="oneweek" type="radio" name="expires" value="7">&nbsp;<label for="oneweek">One Week</label>
        <input id="oneday" type="radio" name="expires" value="1">&nbsp;<label for="oneday">One Day</label>
    </div>
    <div>
        <input type="submit" value="Publish snippet">
    </div>
 </form>
 {{end}}